<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:security ="http://www.springframework.org/schema/security"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd 
    http://www.springframework.org/schema/tx 		
    http://www.springframework.org/schema/tx/spring-tx.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <tx:annotation-driven transaction-manager="transactionManager"/>


    <!-- ******************** beans instanced with @component annotation ****************-->
    <!-- Anthing in these namespaces annotated with @Component will be isntanced
         into the injection container. But this is not usually what you want.
         You want to use the bean defintiions below so that you can swap in
         arbitrary implementions of interfaces as system needs evolve-->
    <context:annotation-config/>
    <context:component-scan base-package="org.gobiiproject.gobiidao.impl"/>
    <context:component-scan base-package="org.gobiiproject.gobidomain.security"/>
    <context:component-scan base-package="org.gobiiproject.gobiiweb.controllers"/>


    <!-- ******************** explicitly defined beans  ****************-->
    <bean id="markerDao" class="org.gobiiproject.gobiidao.entityaccess.impl.mock.MarkerDaoImplMock"/>
    <bean id="markerService" class="org.gobiiproject.gobidomain.services.impl.MarkerServiceImpl"/>

    <!-- ************************ DATA ACCESS BEANS ************************* -->

    <-- Hibernate/JDBC connection properties -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">

        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/flatmeta"/>
        <property name="username" value="appuser"/>
        <property name="password" value="appuser"/>
    </bean>


    <!-- Hibernate 4 SessionFactory Bean definition -->
    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>org.gobiiproject.gobiidao.entities.Analysis</value>
                <value>org.gobiiproject.gobiidao.entities.Contact</value>
                <value>org.gobiiproject.gobiidao.entities.Dataset</value>
                <value>org.gobiiproject.gobiidao.entities.DatasetDnarun</value>
                <value>org.gobiiproject.gobiidao.entities.DatasetMarker</value>
                <value>org.gobiiproject.gobiidao.entities.Dnarun</value>
                <value>org.gobiiproject.gobiidao.entities.DnarunProp</value>
                <value>org.gobiiproject.gobiidao.entities.Dnasample</value>
                <value>org.gobiiproject.gobiidao.entities.DnasampleProp</value>
                <value>org.gobiiproject.gobiidao.entities.Experiment</value>
                <value>org.gobiiproject.gobiidao.entities.Germplasm</value>
                <value>org.gobiiproject.gobiidao.entities.GermplasmProp</value>
                <value>org.gobiiproject.gobiidao.entities.Manifest</value>
                <value>org.gobiiproject.gobiidao.entities.Map</value>
                <value>org.gobiiproject.gobiidao.entities.MapProp</value>
                <value>org.gobiiproject.gobiidao.entities.Marker</value>
                <value>org.gobiiproject.gobiidao.entities.MarkerGroup</value>
                <value>org.gobiiproject.gobiidao.entities.MarkerMap</value>
                <value>org.gobiiproject.gobiidao.entities.MarkerProp</value>
                <value>org.gobiiproject.gobiidao.entities.Platform</value>
                <value>org.gobiiproject.gobiidao.entities.PlatformProp</value>
                <value>org.gobiiproject.gobiidao.entities.Project</value>
                <value>org.gobiiproject.gobiidao.entities.ProjectProp</value>
                <value>org.gobiiproject.gobiidao.entities.Role</value>
                <value>org.gobiiproject.gobiidao.entities.TableDisplay</value>
                <value>org.gobiiproject.gobiidao.entities.Variant</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</prop>
                <!-- DO NOT USE: CAUSES TRANSACTIONBUG <prop key="hibernate.current_session_context_class">thread</prop> -->
                <prop key="hibernate.hbm2ddl.auto">none</prop>
                <prop key="show_sql">false</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <!-- ***********************************************
            SECURITY CONFIGURATION
         *********************************************** -->
    <security:global-method-security secured-annotations="enabled" pre-post-annotations="enabled"/>


    <!--<bean id="userContextLoader" class="org.advocacydb.web.sec.UserContextLoader">-->
    <!--</bean>-->

</beans>
